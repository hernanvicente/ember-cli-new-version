{{#if message}}
  {{#if hasBlock}}
    {{yield version lastVersion (action 'reload') (action 'close')}}
  {{else}}
    <div class='update-notification'>
      {{message}}
      {{#if showReload}}
        <a href="#" {{action 'reload'}} class='btn'>{{reloadButtonText}}</a>
      {{/if}}
    </div>
  {{/if}}
{{/if}}